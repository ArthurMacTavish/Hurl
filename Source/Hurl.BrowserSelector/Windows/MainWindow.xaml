<wpfui:FluentWindow
    x:Class="Hurl.BrowserSelector.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hurl.BrowserSelector.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vs="clr-namespace:Hurl.BrowserSelector.Controls"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Hurl - Select a Browser"
    MinWidth="360"
    MinHeight="200"
    MaxWidth="560"
    MaxHeight="450"
    Deactivated="Window_Deactivated"
    ExtendsContentIntoTitleBar="True"
    KeyUp="Window_Esc"
    SizeChanged="UiWindow_SizeChanged"
    Topmost="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Border
        x:Name="WindowBorder"
        BorderBrush="AliceBlue"
        BorderThickness="2"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="34" />
            </Grid.RowDefinitions>

            <wpfui:TitleBar MinimizeToTray="True" Visibility="Hidden">
                <wpfui:TitleBar.Tray>
                    <wpfui:NotifyIcon
                        FocusOnLeftClick="True"
                        Icon="pack://application:,,,/Assets/internet.ico"
                        LeftClick="NotifyIcon_LeftClick"
                        MenuOnRightClick="True"
                        TooltipText="Hurl running at background for faster access">
                        <wpfui:NotifyIcon.Menu>
                            <ContextMenu>
                                <wpfui:MenuItem
                                    Click="TrayMenuItem_OnClick"
                                    Header="Open"
                                    SymbolIcon="Folder24"
                                    Tag="open" />
                                <wpfui:MenuItem
                                    Click="TrayMenuItem_OnClick"
                                    Header="Timed"
                                    SymbolIcon="Clock24"
                                    Tag="timed" />
                                <Separator />
                                <wpfui:MenuItem
                                    Click="TrayMenuItem_OnClick"
                                    Header="Reload"
                                    SymbolIcon="ArrowClockwise24"
                                    Tag="reload" />
                                <wpfui:MenuItem
                                    Click="TrayMenuItem_OnClick"
                                    Header="Exit"
                                    SymbolIcon="Save24"
                                    Tag="exit" />
                            </ContextMenu>
                        </wpfui:NotifyIcon.Menu>
                    </wpfui:NotifyIcon>
                </wpfui:TitleBar.Tray>
            </wpfui:TitleBar>

            <Grid
                Height="36"
                Margin="2"
                MouseLeftButtonDown="Draggable">
                <ComboBox
                    x:Name="ChooseType"
                    Width="200"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="#40000000"
                    Foreground="AliceBlue"
                    SelectedIndex="0"
                    SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem ToolTip="Opens the URL in the selected browser">Normal Select</ComboBoxItem>
                    <ComboBoxItem ToolTip="Automatically open selected browser in future for this URL">Always for this URL</ComboBoxItem>
                    <ComboBoxItem>Always for this Host</ComboBoxItem>
                </ComboBox>
                <TextBlock
                    Padding="0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="-1"
                    FontSize="16"
                    Foreground="AliceBlue"
                    Text="" />
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <wpfui:Button
                        Margin="0,0,4,0"
                        Padding="7,5"
                        Background="#40000000"
                        Icon="Add24" />
                    <wpfui:Button
                        Margin="0,0,4,0"
                        Padding="7,5"
                        Background="#40000000"
                        Click="Button_Click"
                        Icon="Clock24" />
                    <wpfui:Button
                        Margin="0,0,4,0"
                        Padding="7,5"
                        Background="#40000000"
                        Click="SettingsBtnClick"
                        Icon="Settings24" />
                    <wpfui:Button
                        Margin="0,0,4,0"
                        Padding="7,5"
                        Background="#40000000"
                        Click="CloseBtnClick"
                        Icon="Subtract24" />
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <vs:BrowsersList />
                <!--<StackPanel
                        x:Name="stacky"
                        VerticalAlignment="Center"
                        MouseWheel="ScrollViewer_MouseWheel"
                        Orientation="Horizontal">
                </StackPanel>-->
            </Grid>

            <StackPanel
                Grid.Row="2"
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <wpfui:Button
                    x:Name="linkpreview"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="linkpreview_Click"
                    Cursor="Hand"
                    FontFamily="Calibri"
                    FontSize="10"
                    Foreground="AliceBlue" />
                <wpfui:Button
                    Padding="4"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="LinkCopyBtnClick"
                    Cursor="Hand"
                    FontSize="14"
                    Foreground="#11FFFFFF"
                    Icon="Copy16" />
            </StackPanel>
        </Grid>
    </Border>
</wpfui:FluentWindow>