<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Hurl.Settings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Hurl.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="172" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="5,8">
            <ListView
                x:Name="NavMenuHeaderList"
                IsItemClickEnabled="True"
                ItemClick="OnNavItemClicked">
                <ListView.Items>
                    <ListViewItem Tag="home">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE80F;" />
                            <TextBlock Margin="12,0,0,0" Text="Home" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Tag="browsers">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE774;" />
                            <TextBlock Margin="12,0,0,0" Text="Browsers" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Tag="rulesets">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE724;" />
                            <TextBlock Margin="12,0,0,0" Text="Rulesets" />
                        </StackPanel>
                    </ListViewItem>
                </ListView.Items>
            </ListView>

            <ListView
                x:Name="NavMenuFooterList"
                VerticalAlignment="Bottom"
                IsItemClickEnabled="True"
                ItemClick="OnNavItemClicked">
                <ListView.Items>
                    <ListViewItem MinWidth="0" Tag="settings">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE713;" />
                            <TextBlock Margin="12,0,0,0" Text="Settings" />
                        </StackPanel>
                    </ListViewItem>
                </ListView.Items>
            </ListView>
        </Grid>

        <ScrollViewer
            Grid.Column="1"
            Padding="0,16,0,0"
            Background="{StaticResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="1,0,0,0">
            <Frame x:Name="NavigationFrame" Padding="8" />
        </ScrollViewer>
    </Grid>

</Window>
