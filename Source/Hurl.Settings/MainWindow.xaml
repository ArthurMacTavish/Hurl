<wpfui:UiWindow
    x:Class="Hurl.Settings.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Pages="clr-namespace:Hurl.Settings.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Hurl.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Hurl Settings"
    MinWidth="860"
    ExtendsContentIntoTitleBar="True"
    SizeToContent="Height"
    WindowBackdropType="Mica"
    mc:Ignorable="d">
    <StackPanel>
        <wpfui:TitleBar
            Title="Hurl Settings"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            CanMaximize="false"
            ShowMaximize="false"
            ShowMinimize="false"
            UseSnapLayout="false" />

        <Grid Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="1">
                <StackPanel>
                    <wpfui:CardControl Margin="0,0,0,8">
                        <wpfui:CardControl.Header>
                            Launch Under Mouse
                        </wpfui:CardControl.Header>
                        <wpfui:ToggleSwitch IsChecked="{Binding Path=(LaunchUnderMouse)}" />
                    </wpfui:CardControl>
                    <wpfui:CardControl Margin="0,0,0,8">
                        <wpfui:CardControl.Header>
                            Use White Border
                        </wpfui:CardControl.Header>
                        <wpfui:ToggleSwitch IsChecked="{Binding Path=(NoWhiteBorder)}" />
                    </wpfui:CardControl>
                    <wpfui:CardControl Margin="0,0,0,24">
                        <wpfui:CardControl.Header>
                            Background
                        </wpfui:CardControl.Header>
                        <ComboBox SelectedIndex="2">
                            <ComboBoxItem>None</ComboBoxItem>
                            <ComboBoxItem>Acrylic</ComboBoxItem>
                            <ComboBoxItem>Mica</ComboBoxItem>
                        </ComboBox>
                    </wpfui:CardControl>

                    <wpfui:CardControl Margin="0,0,0,8">
                        <wpfui:CardControl.Header>
                            Automatic Opening Rules
                        </wpfui:CardControl.Header>
                        <wpfui:Button
                            Click="Button_Click"
                            Content="Edit"
                            Icon="WindowNew24"
                            Tag="{x:Type Pages:BrowsersEdit}" />
                    </wpfui:CardControl>

                    <wpfui:CardControl Margin="0,0,0,8">
                        <wpfui:CardControl.Header>
                            Browsers List
                        </wpfui:CardControl.Header>
                        <wpfui:Button
                            Click="Button_Click"
                            Content="Edit"
                            Icon="WindowNew24"
                            Tag="{x:Type Pages:BrowsersEdit}" />
                    </wpfui:CardControl>
                    <wpfui:CardControl>
                        <wpfui:CardControl.Header>
                            About
                        </wpfui:CardControl.Header>
                        <wpfui:Button
                            Click="Button_Click"
                            Content="Edit"
                            Icon="WindowNew24"
                            Tag="{x:Type Pages:About}" />
                    </wpfui:CardControl>
                </StackPanel>
            </Border>

            <Border
                x:Name="ContentBox"
                Grid.Row="1"
                Grid.Column="2"
                Background="#0FFFFFFF"
                CornerRadius="4">
                <!--<Pages:BrowsersEdit />-->
            </Border>
        </Grid>
    </StackPanel>
</wpfui:UiWindow>
