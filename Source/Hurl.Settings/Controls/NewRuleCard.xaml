<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Hurl.Settings.Controls.NewRuleCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Hurl.Settings.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid>
        <toolkit:SettingsCard>
            <toolkit:SettingsCard.Header>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="RuleTypeControl" SelectedIndex="2">
                        <ComboBoxItem>Regex</ComboBoxItem>
                        <ComboBoxItem>Glob</ComboBoxItem>
                        <ComboBoxItem>String</ComboBoxItem>
                    </ComboBox>
                    <TextBox
                        x:Name="RuleValueControl"
                        Width="250"
                        Margin="10,0,0,0"
                        PlaceholderText="Rule" />
                </StackPanel>
            </toolkit:SettingsCard.Header>

            <Button Style="{StaticResource EllipsisButton}">
                <SymbolIcon Symbol="Delete" />
            </Button>
        </toolkit:SettingsCard>
    </Grid>
</UserControl>
