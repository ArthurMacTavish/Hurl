<Window x:Class="Hurl.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hurl.Views"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Hurl Settings" Width="600" Height="400">
    <TabControl Background="Azure">
        <TabItem Header="Setup" Padding="10,5,10,5">
            <Grid>
                <TextBlock Text="Setting up" />
                <Button Content="Install" Click="Install_Button" Width="80" Height="40" Margin="0,50,100,0" VerticalAlignment="Top"/>
                <Button Content="Uninstall" Click="Uninstall_Button" Width="80" Height="40" Margin="100,50,0,0" VerticalAlignment="Top"/>
            </Grid>
        </TabItem>
        <TabItem Header="Browser" Padding="10,5,10,5">
            <Grid/>
        </TabItem>
        <TabItem Header="About" Padding="10,5,10,5">
            <Grid />
        </TabItem>
    </TabControl>

</Window>
